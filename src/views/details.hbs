{{#with cube}}
<h1>{{name}}</h1>
<img class="cube" src="{{imageUrl}}" />
<div class="details">
  <p><span>Description:</span>
    {{description}}</p>
  <p><span>Difficulty level:</span> {{difficulty}}</p>
  <a class="btn" href="/">Back</a>
  <a class="btn" href="/edit/{{id}}">Edit</a>
  {{#if isOwner}}
    <a class="btn" href="/details/{{id}}/edit">Edit</a>
  <a class="btn" href="/details/{{id}}/delete">Delete</a>
  <a class="btn" href="/details/{{id}}/accessory/add">Attach accessories</a>
  {{/if}}
</div>
<h2>Accessories</h2>
<div class="accessories">
  {{#if hasAcc}}
  {{#each Accessories}}
  {{> accCard}}
  {{/each}}
  {{else }}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/if}}
</div>
<h1>end of detals.hbs</h1>
{{/with}}